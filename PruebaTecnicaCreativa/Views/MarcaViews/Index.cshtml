@model IEnumerable<MarcaModel>

@{
    ViewData["Title"] = "Index";
}

<partial name="_Notification" />

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Marcas</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Marca" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Nueva Marca
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr>
                <th width="20%">
                    Nombre Marca
                </th>
                <th>
                    Descripcion
                </th>
                <th>
                    Herramientas
                </th>
                <th>
                    Exactitud
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="20%">
                        @obj.NombreMarca
                    </td>
                    <td width="30%">
                        @obj.Descripcion
                    </td>
                    <td width="20%">
                        @obj.TipoHerramientas
                    </td>
                    <td width="15%">
                        @obj.Exactitud
                    </td>
                    <td>
                        <div class="w-50 btn-group d-inline" role="group">
                            <a asp-controller="Marca" asp-action="Edit" asp-route-id="@obj.IdMarca"
                               class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a>
                        </div>
                        <div class="w-50 btn-group d-inline" role="group">
                            <a asp-controller="Marca" asp-action="Delete" asp-route-id="@obj.IdMarca"
                               class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
